<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <!-- Top border (adjust color as needed) -->
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary" />

    <!-- Title bar -->
    <TextView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/black_outline_background"
        android:elevation="4dp"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="2dp"
        android:text="MDP Project"
        android:textSize="20sp"
        android:textStyle="bold" />

    <!-- Existing content starts here -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="69dp"
            android:layout_height="35dp"
            android:text="Clear" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:background="@drawable/black_outline_background" />
    </LinearLayout>

    <!-- New parent LinearLayout for ScrollView and Controller buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="132dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:padding="12dp"
            android:background="@drawable/black_outline_background">

            <TextView
                android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#222222"
                android:textIsSelectable="true" />
        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Top row with Rotate Left, Up button, and Rotate Right -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRotateLeft"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="↺"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnUp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="↑"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnRotateRight"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="↻"
                    android:textSize="24sp" />
            </LinearLayout>

            <!-- Middle row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnLeft"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="←"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnDown"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="↓"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/btnRight"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:text="→"
                    android:textSize="24sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:padding="4dp">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type message"
            android:background="@drawable/black_outline_background" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginStart="4dp"
            android:text="Send" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#EEEEEE"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/bottomIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Bluetooth"
            android:src="@android:drawable/stat_sys_data_bluetooth" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Bluetooth"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Connect" />
    </LinearLayout>
</LinearLayout>