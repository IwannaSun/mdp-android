<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="MDP Project"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/gridArea"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#EEEEEE">

        <!-- gridMap正方形 -->
        <GridLayout
            android:id="@+id/gridMap"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:columnCount="20"
            android:rowCount="20"
            android:padding="2dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/yAxis"
            app:layout_constraintEnd_toStartOf="@+id/rightBlank"
            app:layout_constraintWidth_percent="0.66"
            app:layout_constraintHeight_percent="0.66"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0" />

        <!-- Y轴坐标 -->
        <LinearLayout
            android:id="@+id/yAxis"
            android:layout_width="32dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="bottom"
            app:layout_constraintTop_toTopOf="@id/gridMap"
            app:layout_constraintBottom_toBottomOf="@id/gridMap"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- X轴坐标 -->
        <LinearLayout
            android:id="@+id/xAxis"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="left|bottom"
            app:layout_constraintTop_toBottomOf="@id/gridMap"
            app:layout_constraintStart_toStartOf="@id/gridMap"
            app:layout_constraintEnd_toEndOf="@id/gridMap" />

        <!-- 右侧空白区 -->
        <FrameLayout
            android:id="@+id/rightBlank"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/gridMap"
            app:layout_constraintWidth_percent="0.34"
            app:layout_constraintHeight_percent="1" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="4dp"
        android:weightSum="3">

        <FrameLayout
            android:id="@+id/controlsContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="2dp">

            <GridLayout
                android:id="@+id/controlsGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:alignmentMode="alignMargins"
                android:columnCount="3"
                android:rowCount="2"
                android:useDefaultMargins="false"
                android:padding="0dp">

                <Button
                    android:id="@+id/btnRotateLeft"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="↺"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnUp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="↑"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnRotateRight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="↻"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnLeft"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="←"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnDown"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="↓"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btnRight"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="2dp"
                    android:text="→"
                    android:textSize="14sp" />
            </GridLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical"
            android:paddingStart="8dp">


            <ScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:padding="2dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/textbox_border">
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etMessage"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Type message"
                    android:padding="8dp"
                    android:textSize="14sp"
                    android:background="@drawable/textbox_border" />

                <Button
                    android:id="@+id/btnSend"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="4dp"
                    android:text="Send"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <Button
                    android:id="@+id/btnConnect"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="Connect"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnClear"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:text="Clear"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
