<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer (bottom) -->
    <item
        android:left="0dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#40000000" />
        </shape>
    </item>

    <!-- Wood background with blur effect -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
        </shape>
        <bitmap
            android:src="@drawable/woodbackground"
            android:tileMode="clamp"
            android:alpha="0.85" />
    </item>

    <!-- Semi-transparent white overlay for slight blur effect -->
    <item
        android:left="0dp"
        android:top="0dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="#33FFFFFF" />
        </shape>
    </item>
</layer-list>
